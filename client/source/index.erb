<nav id="navigation-view">
  <%= partial "templates/navigation" %>
</nav>

<div id="main">
  <section id="today-view" data-role="page" class="hidden">
    <%= partial "templates/today" %>
  </section>

  <section id="activity-inventory-view" data-role="page" class="hidden">
    <%= partial "templates/activity-inventory" %>
  </section>

  <section id="records-view" data-role="page" class="hidden">
    <%= partial "templates/records" %>
  </section>
</div>

<div class="overlay" style="display:none">
  <div class="timer">
    <canvas class="gauge" width="300" height="300"></canvas>
    <p><a href="#">+<span class="counter">1</span> pomodoro</a></p>
  </div>
</div>

<script type="text/template" id="task-template">
  <%= partial "templates/task" %>
</script>

<script type="text/template" id="empty-task-template">
  <tr class="empty ui-state-disabled">
    <td colspan="5">You can drop in tasks</td>
  </tr>
</script>